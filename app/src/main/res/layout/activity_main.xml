<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.belgioioso.bcimilkreceipt.bcimilkreceipt.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_spacer1"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_descriptionlabel"
        android:text="@string/main_description"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/valueText_Lime"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/main_spacer1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_spacer2"
        android:text=""
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/main_descriptionlabel"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_routelabel"
        android:text="@string/main_routelabel"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/valueText_Lime"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="250dp"
        app:layout_constraintTop_toBottomOf="@id/main_spacer2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_route"
        android:maxLength="100"
        android:text=""
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="enter route identifier"
        app:layout_constraintTop_toBottomOf="@id/main_routelabel"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_licenselabel"
        android:text="@string/main_licenselabel"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/valueText_Lime"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/main_route"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_license"
        android:maxLength="100"
        android:text=""
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="enter truck license"
        app:layout_constraintTop_toBottomOf="@id/main_licenselabel"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_spacer3"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/main_license"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_startmileagelabel"
        android:inputType="number"
        android:text="@string/main_startmileagelabel"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/valueText_Lime"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/main_spacer3"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_startmileage"
        android:maxLength="100"
        android:text=""
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="enter start mileage"
        app:layout_constraintTop_toBottomOf="@id/main_startmileagelabel"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_spacer4"
        android:text=""
        android:textSize="230dp"
        app:layout_constraintTop_toBottomOf="@id/main_startmileage"/>

    <Button
        android:id="@+id/main_savereceipt_button"
        android:layout_width="350dp"
        android:layout_height="98dp"
        android:text="@string/main_savereceipt_button"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_spacer4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_spacer5"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/main_savereceipt_button"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_bottom_message"
        android:text="Current User: ssss - Current Receipt Date: xx/xx/xxxx"
        android:textSize="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/main_spacer5"/>

</android.support.constraint.ConstraintLayout>
